{
    "$schema": "https://opencode.ai/config.json",
    "model": "openai/gpt-5.2",
    "small_model": "openai/gpt-5.1-codex-max",
    "default_agent": "Sisyphus",
    "provider": {
        "openai": {
            "options": {
                "baseURL": "http://localhost:13500/v1"
            },
            "models": {
                "gpt-5.2": {
                    "options": {
                        "include": ["reasoning.encrypted_content"],
                        "reasoningEffort": "xhigh",
                        "store": false
                    }
                },
                "gpt-5.1-codex-max": {
                    "options": {
                        "textVerbosity": "low",
                        "include": ["reasoning.encrypted_content"],
                        "reasoningEffort": "high",
                        "store": false
                    }
                }
            }
        },
        "google": {
            "options": {
                "baseURL": "http://localhost:13500/v1beta"
            },
            "models": {
                "gemini-3-flash-preview": {
                    "name": "Gemini 3 Flash Preview",
                    "options": {
                        "thinkingConfig": {
                            "thinkingLevel": "high",
                            "includeThoughts": true
                        }
                    }
                },
                "gemini-3-pro-preview": {
                    "name": "Gemini 3 Pro Preview",
                    "options": {
                        "thinkingConfig": {
                            "thinkingLevel": "high",
                            "includeThoughts": true
                        }
                    }
                }
            }
        },
        "anthropic": {
            "options": {
                "baseURL": "http://localhost:13500/v1"
            },
            "models": {
                "claude-opus-4-5": {
                    "options": {
                        "thinking": {
                            "type": "enabled",
                            "budgetTokens": 32000
                        }
                    }
                }
            }
        }
    },
    "permission": {
        "bash": {
            "*": "allow",
            "git status": "allow",
            "git diff": "allow",
            "git log": "allow"
        },
        "external_directory": "ask"
    },
    "watcher": {
        "ignore": [
            "**/.git/**",
            "**/node_modules/**",
            "**/dist/**",
            "**/build/**",
            "**/.next/**",
            "**/out/**",
            "**/target/**"
        ]
    },
    "mcp": {
        "firecrawl": {
            "type": "local",
            "command": ["firecrawl-mcp"],
            "enabled": true,
            "environment": {
                "FIRECRAWL_API_URL": "http://127.0.0.1:3002"
            }
        }
    },
    "autoupdate": "notify",
    "plugin": ["oh-my-opencode"]
}
